<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/fullname_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/distance_from_right_side"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:fontFamily="@font/heebo_extra_bold"
        android:text=" שם מלא:"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/name_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/flag_transparent" />

    <android.widget.Button
        android:id="@+id/birthday_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/heebo_extra_bold"
        android:background="@drawable/button_selector"
        android:backgroundTint="#DFDDDD"
        android:text="@string/choose"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/birthday_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:fontFamily="@font/heebo_extra_bold"
        android:text="תאריך יום הולדת:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gender_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:fontFamily="@font/heebo_extra_bold"
        android:text="מין:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <android.widget.Button
        android:id="@+id/gender_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/heebo_extra_bold"
        android:background="@drawable/button_selector"
        android:backgroundTint="#DFDDDD"
        android:text="לא משנה לי"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tell_about_yourself_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:background="@drawable/flag_transparent"
        android:fontFamily="@font/heebo_light"
        android:gravity="top"
        android:hint="ספר על עצמך:"
        android:textColor="@color/black"
        android:textSize="18sp" />


</RelativeLayout>