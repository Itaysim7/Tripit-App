<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/fullname_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:layout_marginStart="@dimen/distance_from_right_side"
        android:text=" שם מלא:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/flag_transparent"/>

    <TextView
        android:id="@+id/birthday_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:layout_marginStart="@dimen/distance_from_right_side"
        android:text="תאריך יום הולדת:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gender_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:layout_marginStart="@dimen/distance_from_right_side"
        android:text="מין:"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <Button
        android:id="@+id/gender_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="180dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="לא משנה לי" />

    <EditText
        android:id="@+id/tell_about_yourself_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="top"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="@dimen/distance_from_right_side"
        android:layout_marginStart="@dimen/distance_from_right_side"
        android:background="@drawable/flag_transparent"
        android:hint="ספר על עצמך:"
        android:textColor="@color/black"
        android:textSize="18sp" />






</RelativeLayout>