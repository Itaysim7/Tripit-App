<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/image_profile_view"
        android:layout_width="76dp"
        android:layout_height="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/user_image" />

    <EditText
        android:id="@+id/About_Myself_Txt"
        android:layout_width="352dp"
        android:layout_height="75dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-thin"
        android:includeFontPadding="false"
        android:inputType="text"
        android:text="למשתמש זה אין מה לספר על עצמו."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_view" />

    <ScrollView
        android:layout_width="413dp"
        android:layout_height="438dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/My_posts_txt"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-black"
                android:text="הפוסטים שלי:" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="פוסט מגניב מספר 1!" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:text="פוסט מגניב מספר 2, הנה אני מספר על עצמי" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:text="פןסט מספר שלוש" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:text="עוד פוסט..." />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:text="..." />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="פוסט מגניב מספר 7!" />
        </LinearLayout>


    </ScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>