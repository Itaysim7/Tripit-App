<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4DB9F6CA"
    tools:context=".CreatePost">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/return_date"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="120dp"
                android:background="#66D7DFD6"
                android:text="@string/date_flight2"
                android:textAlignment="center"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/departure_date"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="120dp"
                android:background="#66D7DFD6"
                android:text="@string/date_flight1"
                android:textAlignment="center"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonForReturneDate"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/return_date"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonForDepartureDate"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/departure_date"
                android:textSize="20dp" />

        </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:scrollbarSize="80dp">

            <RadioButton
                android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:text="@string/no" />
            <RadioButton
                android:id="@+id/radio_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:checked="true"
                android:text="@string/yes" />

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="גמיש בתאריכים?   "
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="20dp" />

        </RadioGroup>

        <TextView
            android:id="@+id/flightPurposes"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#66D7DFD6"
            android:text="@string/flight_purposes"
            android:textAlignment="center"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonForFlightPurposes"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/chooseYourOptions"
            android:textSize="20dp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            android:paddingLeft="60dp"
            android:text="ספר על עצמך..."
            android:textSize="20dp"
            android:maxLength="1000"
            android:gravity="start"
            android:paddingRight="10dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="פרסם"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#D32F2F"/>


    </LinearLayout>

</ScrollView>
