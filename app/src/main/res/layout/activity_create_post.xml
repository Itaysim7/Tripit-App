<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4DB9F6CA"
    tools:context=".CreatePost">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/return_date"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="120dp"
                android:background="#66D7DFD6"
                android:text="@string/date_flight2"
                android:textAlignment="center"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/departure_date"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="120dp"
                android:background="#66D7DFD6"
                android:text="@string/date_flight1"
                android:textAlignment="center"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_for_return_Date"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/return_date"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_for_departure_Date"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/departure_date"
                android:textSize="20dp" />

        </LinearLayout>



        <TextView
            android:id="@+id/flight_purposes"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#66D7DFD6"
            android:text="@string/flight_purposes"
            android:textAlignment="center"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_for_flight_purposes"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:background="#9AA5A3"
            android:text="@string/chooseYourOptions"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_for_age"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="גיל"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_for_gender"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="מין"
                android:textSize="20dp" />

        </LinearLayout>

        <EditText
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="start"
            android:maxLength="1000"
            android:paddingLeft="60dp"
            android:paddingRight="10dp"
            android:text="ספר על עצמך..."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="#D32F2F"
            android:text="פרסם"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>
